  "compilerOptions": {
    "target":"es6",
    "module":"commonjs",
    "declaration":true,
    "esModuleInterop": true,
    "outDir":"build",
    "baseUrl":".",
    "strict": true,
    "lib": [ "DOM","ESNext"],
    "resolveJsonModule": true                               
  },
  "include":[ 
     "*/**/*",
     "*.ts"
  ],
  "exclude":[ 
     "/node_modules",
     "/build"
  ],
  "compileOnSave":false
}
